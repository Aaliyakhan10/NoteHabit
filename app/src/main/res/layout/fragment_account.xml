<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/frameLayout2"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="16dp"
    tools:context=".fragments.AccountFragment">

    <TextView
        android:id="@+id/nameDisTv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="8dp"
        android:text="Name:"
        android:textSize="22sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/emailDisTv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="8dp"
        android:text="Email:"
        android:textSize="22sp"
        app:layout_constraintEnd_toEndOf="@+id/nameDisTv"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/nameDisTv"
        app:layout_constraintTop_toBottomOf="@+id/nameDisTv" />

    <Button
        android:id="@+id/changeInfoBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:backgroundTint="@color/LavenderPurpleDark"
        android:text="Change Name"
        app:layout_constraintStart_toStartOf="@+id/emailDisTv"
        app:layout_constraintTop_toBottomOf="@+id/emailDisTv" />

    <Button
        android:id="@+id/reserPassBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:backgroundTint="@color/LavenderPurpleDark"
        android:text="Reset Password"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.526"
        app:layout_constraintStart_toEndOf="@+id/changeInfoBtn"
        app:layout_constraintTop_toBottomOf="@+id/emailDisTv" />

    <LinearLayout
        android:id="@+id/editll"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="8dp"
        android:orientation="horizontal"
        android:padding="4dp"
        android:visibility="gone"
        app:layout_constraintEnd_toEndOf="@+id/reserPassBtn"
        app:layout_constraintStart_toStartOf="@+id/changeInfoBtn"
        app:layout_constraintTop_toBottomOf="@+id/reserPassBtn">

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/nameEditLayout"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="0.65">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/nameEdit"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Enter your name" />
        </com.google.android.material.textfield.TextInputLayout>

        <Button
            android:id="@+id/saveInfoBtn"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_margin="3dp"
            android:layout_weight="0.35"
            android:backgroundTint="@color/LavenderPurpleDark"
            android:text="save"
            android:textSize="18sp" />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>